<label><%= l(:label_survey) %></label>
<% 
    if !params[:account_id].blank?
        surveyForType = 'WkAccount'
        surveyForID = params[:account_id]
    elsif !params[:contact_id].blank?
        surveyForType = 'WkCrmContact'
        surveyForID = params[:contact_id]
    end
%>
<div>
    <div class="wk-contextual">
		<%= link_to l(:label_new_survey), url_for(:controller => "wksurvey", :action => "edit", :surveyForType => surveyForType, :surveyForID => surveyForID), :class => 'icon icon-time-add' %>
    </div>
	<%= render :partial => 'wksurvey/survey_list', :local => {:params => params}%>
</div>