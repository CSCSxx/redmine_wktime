<%= javascript_include_tag 'survey', :plugin => "redmine_wktime" %>
<%= stylesheet_link_tag 'wk-time', :plugin => "redmine_wktime" %>

<% 	if @edit_Survey_Entry.blank?
		survey_name = nil
		status = nil
		active = nil
		survey_id = nil
		survey_question_id = nil
	else
		survey_id = @edit_Survey_Entry.first.id
		survey_choice_id = @edit_Survey_Entry.first.survey_choice_id
		survey_question_id = @edit_Survey_Entry.first.survey_question_id
		survey_name = @edit_Survey_Entry.first.survey_name
		status = @edit_Survey_Entry.first.status
		inActive = @edit_Survey_Entry.first.in_active
	end 
%>
<% if @edit_Survey_Entry.blank?%>
<h2><%= l(:label_new_survey) %></h2>
<% else %>
<h2><%= l(:label_edit_survey) %></h2>
<% end %>


<%= form_tag({:controller => 'wksurvey', :action => 'updateSurvey'}, :method => :post, :id => 'query_form') do %>
	<%=h hidden_field_tag('survey_id', survey_id) %>
	<%=h hidden_field_tag('survey_question_id', survey_question_id) %>
	<fieldset class="box tabular">
		<table id="newsurvey" class="odd-even" align='left'>
			<tr>
				<th align="left"><%= l(:label_survey_name) %></th>
				<td align="left" style="padding-left:40px;">
					<%=h text_field_tag("survey_name", survey_name, :size => 40) %> 
				</td>
			</tr>
			<tr>
				<th align="left"><%= l(:label_survey_choices) %></th>
				<td></td>
			</tr>
			<% if @edit_Survey_Entry.blank? %>
				<tr>
					<td></td>
					<td align="left" style="padding-left:40px;">
							<%=h text_field_tag("surveyChoices0_", "", :size => 40) %>
							<%=link_to image_tag('delete.png'), "javascript:deleterow(0);", :title => l(:button_delete)%>
					</td>
				</tr>
			<% else %>
				<% @edit_Survey_Entry.each_with_index do |entry, index| %>
					<tr>
						<td></td>
						<td align="left" style="padding-left:40px;">
							<%=h text_field_tag(("surveyChoices" + index.to_s + "_" + (entry.survey_choice_id).to_s), entry.name, :size => 40) %>
							<%=link_to image_tag('delete.png'), "javascript:deleterow(" + index.to_s + ");", :title => l(:button_delete) %>
						</td>
					</tr>
				<% end %>
			<% end %>
					
			<tr id="lastrow">
				<td></td>
				<td align="right" style="padding-left:40px;">
					<%= link_to l(:button_add), "#", { :onclick => "javascript:addrows();", :class => 'icon icon-add' } %>
				</td>
			</tr>
			<% unless survey_id.blank? %>
				<tr>
					<th align="left"><%= l(:label_status) %></th>
					<td align="left" style="padding-left:40px;">
						<%=h select_tag("survey_status", options_for_select(getSurveyStatusArr.drop(1), status)) %>
					</td>
				</tr>
				<tr>
					<th align="left"><%= l(:label_inactive) %></th>
					<td align="left" style="padding-left:40px;">
						<%=h check_box_tag("survey_inactive", true, inActive ) %>
					</td>
				</tr>
			<% end %>
		</table>
	</fieldset>
	<div>
		<%= submit_tag l(:button_save), :id => 'wksurvey_save' %>
	</div>
<% end %>	