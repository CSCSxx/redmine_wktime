<%= stylesheet_link_tag 'wk-time', :plugin => "redmine_wktime" %>
<div class="autoscroll">
<table class="list time-entries">
  <thead>
         <tr>
				<th class="lbl-txt-align"><%= l(:field_name)   %></th>
				<th class="lbl-txt-align"><%=  l(:label_account_name) %></th>
				<th class="lbl-txt-align"><%=  l(:label_txn_sales) + " " + l(:label_stage) %></th>
				<th class="lbl-txt-align"><%=  l(:field_amount)  %></th>
				<th class="lbl-txt-align"><%=  l(:button_close) + " " + l(:field_spent_on)  %></th>
				<th class="lbl-txt-align"><%=  l(:field_assigned_to)  %></th>
				<th class="lbl-txt-align"><%= l(:label_modified) %></th>
				<th></th>
         </tr>
  </thead>
   <tbody>
	<% @opportunity.each do |entry| %>
		<tr>
		    <td class="lbl-txt-align"><%=h entry.name  %></td>
			<td class="lbl-txt-align"><%=h entry.account.name %></td>
			<td class="lbl-txt-align"><%=h entry.sales_stage_id %></td>
			<td class="lbl-txt-align"><%=h entry.amount %></td>
			<td class="lbl-txt-align"><%=h entry.close_date.localtime.strftime("%Y-%m-%d") %></td>
			<td class="lbl-txt-align"><%=h entry.assigned_user.name(:firstname_lastname) %></td>
			<td class="lbl-txt-align"><%=h entry.updated_at.localtime.strftime("%Y-%m-%d") %></td>
			<td class="lbl-txt-align"><%= link_to image_tag('edit.png'), {:controller => controller.controller_name, :action => 'edit', :opp_id => entry.id, :tab => controller.controller_name}, :title => l(:button_edit) %>
							<%= link_to image_tag('delete.png'), {:controller => controller.controller_name, :action => 'destroy', :opp_id => entry.id, :tab => controller.controller_name},  :data => {:confirm => l(:text_are_you_sure)}, :method => :delete, :title => l(:button_delete) %></td>
		</tr>
	<% end %>
   </tbody>
</table>
</div>
<span class="pagination"><%= pagination_links_full @entry_pages, @entry_count %></span>