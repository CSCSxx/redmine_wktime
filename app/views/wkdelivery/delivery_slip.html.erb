<%= stylesheet_link_tag 'wk-time', :plugin => "redmine_wktime" %>
<%= javascript_include_tag 'survey', :plugin => "redmine_wktime" %>
	<div id="time-rpt-dlg" style="overflow-x:auto;">
		<center><b><%= (l(:label_delivery_slip)).upcase %></b></center>
		<div style="float:right">
			<table>
				<tr>
					<td>
						<% attachment = WkLocation.getMainLogo() %>
						<% if attachment.present? %>
							<%= image_tag(download_location_attachment_path(attachment, attachment.filename), class: 'filecontent image') %>
						<% end %>
					</td>
				</tr>
			</table>
		</div>
		<div style="clear:both;"></div>
		<table border="1" style="border-collapse:collapse;" cellspacing="0", align="center", frame="box">
			<tr style="width:100%; background-color: #f2f2f2">
				<th align="left"  width="25%"><%= l(:label_name_address_of,l(:label_supplier)) %></th>
				<th align="left"  width="25%"><%= l(:label_name_address_of,l(:label_customer)) %></th>
				<th align="left"  width="25%"><%= l(:label_delivery_date) %></th>
				<th align="left"  width="25%"><%= l(:field_status) %></th>
			</tr>
			<tr style="width:100%;">
				<td  width="25%" style="white-space:pre"><%= controller.getSupplierAddress(@shipment)  %></td>
				<td  width="25%" style="white-space:pre"><%= controller.getCustomerAddress(@shipment) %> </td>
				<td  width="25%"><%= @shipment.shipment_date.to_formatted_s(:long) %></td>
				<td  width="25%"><%= getDeliveryStatus[@shipment.current_status] %></td>
			</tr>
				
			<tr style="width:100%;">
				<td colspan="4">
					<table height="100%" style="width:100%; border-collapse: collapse;">
						<tr style="border-bottom:1pt solid black; width:100%; background-color: #f2f2f2">
							<th align="left" style="width:50%; border-bottom:1pt solid black;" ><%= l(:label_invoice_name) %></th>
							<th align="right" style="width:10%; border-bottom:1pt solid black;" ><%= l(:field_quantity) %></th>
							<th align="center" style="width:10%; border-bottom:1pt solid black;" ><%= l(:field_currency) %></th>
							<th align="right" style="width:25%;  border-bottom:1pt solid black;" ><%= l(:label_selling_price) %></th>
						</tr>
						<% @deliveryItem.each do | entry | %>
							<% inventory_item = entry.inventory_item %>
							<tr style="width:100%;">
								<td style="width:50%;"><%= inventory_item.product_item.product.name + "-" + inventory_item.product_item.brand.name + "-" + inventory_item.product_item.product_model.name%></td>
								<td style="width:10%;" align="right"><%= entry.total_quantity %></td>
								<td style="width:10%;" align="center"><%= entry.currency %></td>
								<td style="width:25%;" align="right"><%= entry.selling_price %></td>
							</tr>
						<% end %>
					</table>
				</td>
			</tr>
			<tr style="width:100%;">
				<td colspan="4">
					<table style="width:100%;">
						<tr style="width:100%;">
							<td style="width:50%;" align="right" ><b><%=  l(:label_grand_total)   %></b></td>					
							<td style="width:10%;" align="right"><b><%= "%.2f" % @deliveryItem.sum(:total_quantity) %></b></td>
							<td style="width:10%;" align="center" ><b><%= @deliveryItem[0].currency %></b></td>
							<td style="width:25%;" align="right" ><b><%=h "%.2f" % @deliveryItem.sum(:selling_price) %></b></td>
						</tr>
					</table>
				</td>					
			</tr>
			<tr style="width:100%;">
				<td align="left" colspan="1" width="20%"><b><%= l(:label_amount_in_words) %></b></td>
				<td align="left" colspan="3" width="35%"><%= numberInWords(@deliveryItem.sum(:selling_price)) + " " + l(:label_only) + "." %></td>
			</tr>
		</table>
	</div>
	<br/>
	<br/>
	<table width="100%">
		<tr width="100%">
			<td class="txt-align" style="float:left;"><b><%= l(:label_place) %> :</b> </td>
			<td class="txt-align"  style="float:right;"><b><%= l(:label_authorized_signatory) %></b></td>
		</tr>
		<tr><td class="txt-align" style="float:left;" ><b><%=  l(:label_date) %> :</b> </td></tr>
	</table>