<%= stylesheet_link_tag 'wk-time', :plugin => "redmine_wktime" %>
<div class="autoscroll">
	<table class="list time-entries">
		<thead>
			<tr>
				<th class="lbl-txt-align"><%= l(:label_account) %></th>
				<th class="lbl-txt-align"><%= l(:label_project) %></th>
				<th class="lbl-txt-align"><%= l(:label_contract_number) %></th>
				<th class="lbl-txt-align"><%= l(:label_start_date) %></th>
				<th class="lbl-txt-align"><%= l(:label_end_date) %></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @contract_entries.each do |entry| %>
				<tr>
					  <td class="lbl-txt-align"><%=h entry.account.name %></td>
					  <td class="lbl-txt-align"><%=h entry.project.name %></td>
					  <td class="lbl-txt-align"><%=h entry.contract_number %></td>
					  <td class="lbl-txt-align"><%=h entry.start_date %></td>
					  <td class="lbl-txt-align"><%=h entry.end_date %></td>
					  <td align="center">
						  <%= link_to image_tag('edit.png'), {:controller => controller.controller_name, :action => 'edit', :contract_id => entry.id}, :title => l(:button_edit) %>
					  </td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>

<span class="pagination"><%= pagination_links_full @entry_pages, @entry_count %></span>
