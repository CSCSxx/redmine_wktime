<%= stylesheet_link_tag 'wk-time', :plugin => "redmine_wktime" %>
<div class="autoscroll">
	<% headerHash = controller.getIventoryListHeader  %>
	<% ratePerHash = getRatePerHash(false) %>
	<% assetTypeHash = getAssetTypeHash(false) %>
	<table class="list time-entries">
		<thead>
			<tr>	
				<%headerHash.values.each do |header|%>
					<th class="lbl-txt-align"><%= header %></th>
				<%end%>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @productInventory.each do |entry| %>
				<tr>
					<%headerHash.keys.each do |colName|%>
						<% if colName == "rate_per" %>
							<td class="lbl-txt-align"><%=h ratePerHash[entry[colName]] %></td>
						<% elsif colName == "rate" || colName == "current_value" %>
							<td class="lbl-txt-align"><%=h entry.asset_currency + " " unless entry[colName].blank? %><%=h entry[colName]  %></td>
						<% elsif colName == "owner_type" %>
							<td class="lbl-txt-align"><%=h assetTypeHash[entry[colName]] %></td>
						<% elsif colName == "is_loggable" %>
							<td class="lbl-txt-align"><%=h checked_image entry.is_loggable?  %></td>
						<% else %>
							<td class="lbl-txt-align"><%=h entry[colName] %></td>
						<% end %>
					<%end%>
					  <td align="center">
						  <%= link_to image_tag('edit.png'), {:controller => controller.controller_name, :action => 'edit', :inventory_item_id => entry.inventory_item_id, :product_item_id => entry.product_item_id}, :title => l(:button_edit) %> 
						  <% if controller.hasDeletePermission %>
							<%= link_to image_tag('delete.png'), {:controller => controller.controller_name, :action => 'destroy', :inventory_item_id => entry.inventory_item_id, :product_item_id => entry.product_item_id, :tab => controller.controller_name},  :data => {:confirm => l(:text_are_you_sure)}, :method => :delete, :title => l(:button_delete) %>
						  <% end %>
					  </td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>

<span class="pagination"><%= pagination_links_full @entry_pages, @entry_count %></span>
