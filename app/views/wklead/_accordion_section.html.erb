<script src="//code.jquery.com/jquery-1.12.4.js"></script>
<script src="//code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
 
<div id="accordion">
  <label><%= l(:label_activity_plural) %></label>
  <div>
	<div class="wk-contextual">
			<%= link_to l(:label_new_item, l(:field_activity)), url_for(:controller => 'wkactivity', :action => 'edit', :parentType => currentObj.class.name, :parentId => currentObj.id), :class => 'icon icon-time-add' %>
	</div>
	<%= render partial: "activity_list", locals: { activities: currentObj.blank? ? nil : currentObj.activities.where.not(:status => ['H', 'C', 'D']) } %>
  </div>
  <label><%= l(:label_history) %></label>
  <div>
	<%= render partial: "activity_list", locals: { activities: currentObj.blank? ? nil : currentObj.activities.where(:status => ['H', 'C', 'D']) } %>
  </div>
</div>
 
<script>
$( "#accordion" ).accordion();
</script>