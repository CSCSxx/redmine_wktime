<fieldset class="box tabular">
	<legend><%=l(:label_content_information, isAccount ? l(:label_account) : l(:label_lead))%></legend>
	<table >
		<% unless isAccount %>
			<tr>
				<th align="left"><%= l(:field_firstname) %></th>
				<td align="left" style="padding-left:40px;"><%=h text_field_tag("first_name",currentObj.blank? ? "" : currentObj.contact.first_name,:size => 20) %> </td>
			</tr>
			<tr>
				<th align="left"><%= l(:field_lastname) %></th>
				<td align="left" style="padding-left:40px;"><%=h text_field_tag("last_name",currentObj.blank? ? "" : currentObj.contact.last_name,:size => 20) %> </td>
			</tr>
		<% end %>
		<tr>
			<th align="left"><%= l(:label_account_name) %></th>
			<td align="left" style="padding-left:40px;"><%=h text_field_tag("account_name",currentObj.blank? ? "" : currentObj.name,:size => 20) %> </td>
		</tr>
		<% if isAccount %>
			<tr>
				<th align="left"><%= l(:label_account_billing) %></th>
				<td align="left" style="padding-left:40px;"><%= check_box_tag("account_billing", 1, (currentObj.blank? ? false : currentObj.account_billing)) %></td>
			</tr>
		<% else %>
			<tr>
				<th align="left"><%= l(:label_department) %></th>
				<td align="left" style="padding-left:40px;"><%=h text_field_tag("department",currentObj.blank? || currentObj.address.blank? ? "" : currentObj.address.department,:size => 20) %> </td>
			</tr>
			<tr>
				<th align="left"><%= l(:field_description) %></th>
				<td align="left" style="padding-left:40px;"><%=h text_area_tag("description",currentObj.blank? || currentObj.account.blank? ? "" : currentObj.account.description,:size => 20) %> </td>
			</tr>
		<% end %>
	</table>
</fieldset>